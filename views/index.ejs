<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GECA News Updates</title>

    <!-- ‚úÖ Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      /* üåà Animated Gradient Background */
      body::before {
        content: "";
        position: fixed;
        inset: 0;
        z-index: -1;
        background: linear-gradient(-45deg, #082b8a, #4b098a, #069c8d, #960606);
        background-size: 400% 400%;
        animation: gradient 13s ease infinite;
      }

      @keyframes gradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .news-ticker {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(4px);
        overflow: hidden;
        white-space: nowrap;
        border-top: 1px solid rgba(255, 255, 255, 0.12);
        border-bottom: 1px solid rgba(255, 255, 255, 0.12);
      }

      .ticker-slide {
        display: inline-block;
        padding-left: 100%;
        animation: ticker 80s linear infinite;
      }

      .news-ticker:hover .ticker-slide {
        animation-play-state: paused;
      }

      @keyframes ticker {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-100%);
        }
      }

      .ticker-item {
        display: inline-block;
        padding: 0 2rem;
      }

      @keyframes trainMove {
        0% {
          transform: translateX(0) scale(1);
          opacity: 1;
        }
        50% {
          transform: translateX(150px) scale(1.1);
        }
        100% {
          transform: translateX(1000px) scale(0.95);
          opacity: 0;
        }
      }

      .animate-train {
        animation: trainMove 0.6s ease-out forwards;
      }
    </style>
  </head>
  <body
    class="overflow-x-hidden min-h-screen text-white flex flex-col justify-center items-center px-4"
  >
    <!-- üî• Logo -->
    <img
      src="/logo.jpg"
      alt="GECA Logo"
      class="w-32 md:w-40 mb-2 rounded-xl shadow-2xl transition-transform hover:scale-105"
    />

    <!-- üî• Heading -->
    <h3 class="text-lg md:text-3xl text-center mb-4">
      Want to stay updated?<br />
      Subscribe to <strong>GECA News Updates</strong> for the latest news!
    </h3>

    <!-- üî• News Ticker -->
    <div class="news-ticker w-full py-2 mb-6">
      <% if (news && news.length) { %>
      <div class="ticker-slide">
        <% news.forEach(function (item, index) { %>
        <span class="ticker-item">
          <a
            href="<%= item.link %>"
            target="_blank"
            rel="noopener"
            class="text-yellow-300 hover:underline font-medium"
            ><%= item.title %></a
          >
          <% if (index < news.length - 1) { %> | <% } %>
        </span>
        <% }); %>
      </div>
      <% } else { %>
      <div class="p-2 text-center text-gray-300">No news to display.</div>
      <% } %>
    </div>

    <!-- üî• Message -->
    <% if (typeof message !== "undefined" && message) { %>
    <div
      id="server-message"
      class="mb-4 px-4 py-2 rounded bg-green-600 text-white text-center font-semibold shadow"
    >
      <%= message %>
    </div>
    <% } %>

    <!-- üî• Subscribe Button -->
    <a href="/auth/google" id="subscribe-link">
      <button
        id="subscribe-btn"
        class="flex items-center gap-2 px-6 py-2 text-white font-semibold rounded-full border border-white bg-transparent shadow-lg transition-transform relative"
      >
        <img
          src="https://www.svgrepo.com/show/475656/google-color.svg"
          alt="Google"
          class="w-5 h-5"
        />
        <span id="btn-text">Subscribe with Google</span>
        <span
          id="train-trail"
          class="absolute left-0 top-0 w-full h-full bg-white opacity-10 blur-2xl scale-0 transition-transform duration-300"
        ></span>
      </button>
    </a>

